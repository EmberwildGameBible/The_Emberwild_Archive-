            subSteps = {
                { id = "RITE_EMBER",  ritual = "RITUAL_DAWNSONG_EMBER",  zone = "AshenRidge"  },
                { id = "RITE_FROST",  ritual = "RITUAL_DAWNSONG_FROST",  zone = "Frostmarch" },
